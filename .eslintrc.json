{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "react"],
  "extends": [
    "react-app",
    "react-app/jest",
    "airbnb-base",
    "airbnb-typescript",
    "plugin:import/typescript"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "import/extensions": "off",
    "import/no-extraneous-dependencies": "off",
    "no-console": "off",
    "indent": ["error", 2],
    "object-curly-newline": "off" 
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
